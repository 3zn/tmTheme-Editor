<div ng-cloak ng-class="{ 'slide' : gallery_visible }" class="actionbar">
  <div ng-show="current_tab == 'scopes'" >
    <div class="search">
      <input type="search" ng-model="scopes_filter.name">
      <div ng-show="scopes_filter.name" ng-click="scopes_filter.name = ''" class="clear_search">
        <i class="icon-cancel-circle"></i>
      </div>
    </div>
    <div class="actions">
      <div ng-click="NewPopover.show()"
           ng-class="{'active': NewPopover.visible }" class="add"
           tooltip-placement="top" tooltip="Add">
        <i class="icon-plus"></i>
      </div>
      <div ng-click="delete_rule(selected_rule)"
           ng-class="{'disabled': !selected_rule }" class="remove"
           tooltip-placement="top" tooltip="Remove">
        <i class="icon-minus"></i>
      </div>
    </div>
  </div>

  <div ng-show="current_tab == 'general'" class="actions">
  </div>

  <div ng-show="current_tab == 'info'" class="actions">
  </div>
</div>

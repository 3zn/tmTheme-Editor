<div id="gallery" class="hide"
     ng-cloak
     ng-controller="galleryController"
     ng-style="{ 'background-color': get_color(bg()), 'color': get_color(fg()) }">
  <ul>
    <li ng-repeat="theme in gallery"
        ng-click="load_theme(theme)"
        ng-class="selected_gradient(theme)"
    >{{theme.name}}</li>
  </ul>
</div>
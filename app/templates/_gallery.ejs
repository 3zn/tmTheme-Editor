<div id="gallery" class="hide"
     ng-cloak
     ng-controller="galleryController"
     ng-style="{ 'background-color': get_color(bg()), 'color': get_color(fg()) }">
  <div ng-class="gallery" ng-cloak class="titlebar">
   <div class="title">
      {{ themes.length }} Themes
   </div>
   <div class="actions">
     <a href="https://github.com/aziz/tmTheme-Editor/wiki/How-to-add-your-own-theme-to-the-gallery%3F"
        target="_blank" class="add"
        data-toggle="tooltip" data-placement="bottom"
        title="Add your own theme to the gallery">+</a>
   </div>
  </div>
  <ul ng-class="gallery" ng-style="{ 'background-color': get_color(bg()), 'color': get_color(fg()) }">
    <li ng-repeat="theme in themes"
        ng-click="load_theme(theme)"
        ng-class="selected_gradient(theme)">
        {{theme.name}}
    </li>
  </ul>
</div>
<!doctype html>
<html>
<head>
  <title>TMTheme Editor</title>
  <%- css("app") -%>
</head>

<body id="drop_zone"
      ng-app="ThemeEditor"
      ng-controller="editorController"
      shortcut='shortcuts'>

  <% include _gallery %>

<div ng-controller="previewController" id="preview">

  <% include _header %>
  <% include _sidebar %>

  <style ng-bind="theme_gutter()"></style>
  <style ng-bind="theme_selection()"></style>
  <style ng-bind="theme_styles()"></style>

  <div ng-class="gallery" class="preview" ng-style="{ 'background-color': get_color(bg()), 'color': get_color(fg()) }">
    <pre class="source js" ng-show="jsonTheme"
         ng-bind-html-unsafe="colorized"
         ng-style="{ 'color': get_color(fg()) }"></pre>
  </div>

</div>
<% include _edit_dialog %>
<% include _new_dialog %>
<%- js("application") -%>
<% include _ga  %>
</body>
</html>